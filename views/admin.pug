    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
    link(rel='stylesheet' href='/admin.css' )
    title Admin panel
  body
    .container-fluid
      // NAVBAR STARTS
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        a.navbar-brand(href='#')
          h2 Portfolio Admin panel
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link(href='#')
                | Profile
                span.sr-only (current)
            li.nav-item.active
              a.nav-link(href='#')
                | Service
                span.sr-only (current)
            li.nav-item.active
              a.nav-link(href='#')
                | Exp
                span.sr-only (current)
            li.nav-item.active
              a.nav-link(href='#')
                | News 
                span.sr-only (current)
            li.nav-item.active
              a.nav-link(href='#')
                | Portfolio 
                span.sr-only (current)
            li.nav-item.active
              a.nav-link(href='#')
                | Testimonial 
                span.sr-only (current)
            li.nav-item.active
              a.nav-link(href='#')
                | Footer 
                span.sr-only (current)
            li.nav-item.dropdown
              a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                | View site
              .dropdown-menu(aria-labelledby='navbarDropdown')
                a.dropdown-item(href='/' target='_blank') Open in new tab
                a.dropdown-item(href='/') Open here and log off
          form.form(action="/updatesite" method="post" style='margin-block-end: 0em;')
            input.btn.btn-outline-success.my-2.my-sm-0.form-control( name='update' type='button' aria-label="Recipient's username" aria-describedby='button-addon2' value='update site' onclick = 'this.form.submit();')
          li.nav-item.dropdown.list-unstyled
            a#navbarDropdown.nav-link.dropdown-toggle.text-white(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
              | Profile
            .dropdown-menu(aria-labelledby='navbarDropdown')
              a.dropdown-item(href='#') add user
              a.dropdown-item(href='#') change name
              a.dropdown-item(href='#') change username
              a.dropdown-item(href='#') change password
              .dropdown-divider
              a.dropdown-item(href='#') logout
          a.navbar-brand(href='#')
            img(src='../static/img/testimonial-2.jpg' width='30' height='30' alt='' loading='lazy')
      // NAVBAR ENDS
      // PROFILE SECTION  STARTS
      .row
        .col-lg-7
          #profile.profile-section.mt-3
            h1 Profile section :
            form(action="/updateprofile", method="post") 
              .input-group.mb-3
                label.col-sm-2.col-form-label(for='inputname') Name :
                input.form-control(name='name' type='text' aria-label="Recipient's username" aria-describedby='button-addon2' value= profile_set.name)
                .input-group-append
                  button#button-addon2.btn.btn-outline-secondary(type='button' ) Update
              .input-group.mb-3
                label.col-sm-2.col-form-label(for='inputext') Typed-text :
                input.form-control( name='text' type='text' placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby='button-addon2' value= profile_set.typed_text)
                .input-group-append
                  button#button-addon2.btn.btn-outline-secondary(type='button' ) Update
              .input-group.mb-3
                label.col-sm-2.col-form-label(for='inputheading') Heading :
                input#inputheading.form-control( name='heading' type='text' placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby='button-addon2' value= profile_set.heading)
                .input-group-append
                  button#button-addon2.btn.btn-outline-secondary(type='button' ) Update
              .input-group.mb-3
                label.col-sm-2.col-form-label(for='inputheadingpara') Heading-para :
                input#inputheadingpara.form-control( name='headingpara' type='text' placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby='button-addon2' value= profile_set.heading_para)
                .input-group-append
                  button.btn.btn-outline-secondary(type='button' ) Update
              button.btn.mybtn.btn-outline-success.text-center(type='submit') Update profile      
        .col-lg-5.imgbox
          img.rounded.mx-auto.d-block.imgg(src= 'data:image/png;base64,'+ profile_set.img.data alt='Hero Image' height='height: 10%;')
          // <img src=" alt="" class="src" >
          form(action="/uploadpimg" method="post" enctype="multipart/form-data")
            .form-group
              label(for='exampleFormControlFile1') Example file input
